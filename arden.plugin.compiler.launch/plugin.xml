<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plugin>
<?eclipse version="3.4"?>
<plugin>
   <extension point="org.eclipse.debug.core.launchConfigurationTypes">
      <launchConfigurationType
            delegate="arden.plugin.compiler.launch.launchconfig.Arden2ByteCodeLaunchConfiguration"
            id="arden.plugin.compiler.launch.launchMLM"
            modes="run, debug"
            name="Medical Logic Module"
            sourceLocatorId="arden.plugin.compiler.launch.SourceLocator">
      </launchConfigurationType>
      <launchConfigurationType
            delegate="arden.plugin.compiler.launch.junitconfig.JUnitLaunchConfiguration"
            id="arden.plugin.compiler.launch.testMLM"
            modes="run, debug"
            name="MLM Test"
            sourceLocatorId="arden.plugin.compiler.launch.SourceLocator">
      </launchConfigurationType>
   </extension>
   <extension point="org.eclipse.debug.ui.launchConfigurationTypeImages">
        <launchConfigurationTypeImage
            icon="icons/mlm.png"
            configTypeID="arden.plugin.compiler.launch.launchMLM"
            id="arden.plugin.compiler.launch.launchconfig.icon">
        </launchConfigurationTypeImage>
        <launchConfigurationTypeImage
            icon="icons/julaunch.png"
            configTypeID="arden.plugin.compiler.launch.testMLM"
            id="arden.plugin.compiler.launch.launchconfig.icon">
        </launchConfigurationTypeImage>
   </extension>
   <extension point="org.eclipse.debug.ui.launchConfigurationTabGroups">
      <launchConfigurationTabGroup
            class="arden.plugin.compiler.launch.launchconfig.TabGroup"
            id="arden.plugin.compiler.launch.launchconfig.TabGroup"
            type="arden.plugin.compiler.launch.launchMLM">
         <launchMode
               description="Debug"
               perspective="org.eclipse.debug.ui.DebugPerspective"
               mode="debug">
         </launchMode>
         <launchMode
               description="Run"
               mode="run">
         </launchMode>
      </launchConfigurationTabGroup>
            <launchConfigurationTabGroup
            class="arden.plugin.compiler.launch.junitconfig.TabGroup"
            id="arden.plugin.compiler.launch.junitconfig.TabGroup"
            type="arden.plugin.compiler.launch.testMLM">
         <launchMode
               description="Debug"
               perspective="org.eclipse.debug.ui.DebugPerspective"
               mode="debug">
         </launchMode>
         <launchMode
               description="Run"
               mode="run">
         </launchMode>
      </launchConfigurationTabGroup>
   </extension>
   <extension point="org.eclipse.debug.ui.launchShortcuts">
      <!-- normal launch -->
      <shortcut
            class="arden.plugin.compiler.launch.launchconfig.LaunchShortcut"
            id="arden.plugin.compiler.launch.launchShortcut"
            label="Medical Logic Module"
            icon="icons/mlm.png"
            path="arden.plugin.compiler.launch"
            modes="run, debug">
         <contextualLaunch>
            <enablement>
               <with variable="selection">
                  <count value="1"/>
                  <iterate>
                     <test property="arden.plugin.compiler.launch.isLaunchableMlm"/>
                  </iterate>
               </with>
            </enablement></contextualLaunch>
         <configurationType id="arden.plugin.compiler.launch.launchMLM"/>
      </shortcut>
      <!-- junit launch -->
      <shortcut
          label="MLM Test"
          icon="icons/julaunch.png"
          helpContextId="org.eclipse.jdt.junit.launch_shortcut"
          class="arden.plugin.compiler.launch.junitconfig.JUnitLaunchShortcut"
          modes="run, debug"
          id="arden.plugin.compiler.launch.junitShortcut">
       <contextualLaunch>
          <enablement>
             <with variable="selection">
                <count value="1"/>
                <iterate>
                   <test property="arden.plugin.compiler.launch.isLaunchableMlm"/>
                   <test property="arden.plugin.compiler.launch.isInJavaProject"/>
                </iterate>
             </with>
          </enablement>
       </contextualLaunch>
       <configurationType id="org.eclipse.jdt.junit.launchconfig"/>
      </shortcut>
   </extension>
   <extension point="org.eclipse.core.expressions.propertyTesters">
      <propertyTester
            class="arden.plugin.compiler.launch.core.MlmEditorTester"
            id="arden.plugin.compiler.launch.MlmEditorTester"
            namespace="arden.plugin.compiler.launch"
            properties="isMlmEditor"
            type="org.eclipse.core.runtime.IAdaptable"/>
      <propertyTester
            class="arden.plugin.compiler.launch.core.LaunchableTester"
            id="arden.plugin.compiler.LaunchableTester"
            namespace="arden.plugin.compiler.launch"
            properties="isLaunchableMlm"
            type="org.eclipse.core.runtime.IAdaptable"/>
      <propertyTester
            class="arden.plugin.compiler.launch.core.JavaProjectTester"
            id="arden.plugin.compiler.launch.JavaProjectTester"
            namespace="arden.plugin.compiler.launch"
            properties="isInJavaProject"
            type="org.eclipse.core.runtime.IAdaptable"/>
   </extension>
   <extension point="org.eclipse.debug.core.sourceLocators">
      <sourceLocator
            class="arden.plugin.compiler.launch.debug.SourceLocator"
            id="arden.plugin.compiler.launch.SourceLocator"
            name="MLM Source Locator">
      </sourceLocator>
   </extension>
   <extension point="org.eclipse.debug.core.breakpoints">
      <breakpoint
            class="arden.plugin.compiler.launch.breakpoints.ArdenSyntaxLineBreakpoint"
            id="arden.plugin.compiler.launch.lineBreakpoint"
            markerType="arden.plugin.compiler.launch.lineBreakpoint.marker">
      </breakpoint>
   </extension>
   <extension
         id="arden.plugin.compiler.launch.lineBreakpoint.marker"
         name="Line Breakpoint Marker"
         point="org.eclipse.core.resources.markers">
      <super
            type="org.eclipse.debug.core.lineBreakpointMarker">
      </super>
      <persistent
            value="true">
      </persistent>
   </extension>
   <extension point="org.eclipse.debug.ui.toggleBreakpointsTargetFactories">
      <toggleTargetFactory
            class="arden.plugin.compiler.launch.breakpoints.ToggleBreakpointsTargetFactory"
            id="arden.plugin.compiler.launch.ToggleBreakpointsTargetFactory">
         <enablement>
            <test
                  property="arden.plugin.compiler.isMlmEditor">
            </test>
         </enablement>
      </toggleTargetFactory>
   </extension>
   <extension point="org.eclipse.core.runtime.adapters">
      <factory
            adaptableType="org.eclipse.ui.texteditor.ITextEditor"
            class="arden.plugin.compiler.launch.breakpoints.BreakpointAdapterFactory">
         <adapter
               type="org.eclipse.debug.ui.actions.IToggleBreakpointsTarget">
         </adapter>
      </factory>
   </extension>
   <extension point="org.eclipse.ui.editorActions">
      <editorContribution
            targetID="arden.plugin.editor.ArdenSyntax"
            id="arden.plugin.editor.ArdenSyntax.BreakpointRulerActions">
         <action
               label="Add Breakpoint"
               class="org.eclipse.debug.ui.actions.RulerToggleBreakpointActionDelegate"
               actionID="RulerDoubleClick"
               id="arden.plugin.compiler.launch.ManageBreakpointRulerAction">
         </action>
      </editorContribution>
   </extension>
</plugin>
